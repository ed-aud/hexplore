<div class="modal fade" id="hexagonShowModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"       aria-hidden="true" data-controller="hexagon-modal"
data-hexagon-modal-target="modalPartial">
  <div class="modal-dialog" role="document" data-hexagon-modal-target="modalPartial">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add to Hive</h5>
      </div>
      <div class="modal-body">
        <%= simple_form_for  @hive do |f| %>
        <div class="form-inputs">
          <%= f.input :name,
                      placeholder: "Name" %>
         <div class="modal-form-actions">
          <%= f.submit "Edit Hive", class: "btn btn-primary form-button" %>
         <button type="button" data-action="click->hexagon-modal#closeModal" class="btn btn-primary form-button" data-dismiss="modal" data-hexagon-modal-target="closeModal">Close</button>
        </div>
        </div>
       <% end %>
      </div>
    </div>
  </div>
</div>
