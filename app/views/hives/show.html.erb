<div class="hexagon-hive-container">
  <div class="hexagon-hive-content-container">
    <div class="hexagon-hive-title-container">
      <div class="hexagon-hive-title-text">
        <h1><%= @hive.name %></h1>
      </div>
      <div class="hexagon-hive-show-action-icons">
        <%# <%= link_to hives_path do %>
          <%# <i class="fa-solid fa-arrow-left action-icon"></i> %>
        <%# <% end %>
        <%= link_to edit_hive_path(@hive) do %>
          <i class="fa-solid fa-pencil action-icon"></i>
        <% end %>
        <%= link_to hive_path(@hive), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
          <i class="fa-solid fa-trash action-icon"></i>
        <% end %>
      </div>
    </div>
    <div class="hexagon-hive-non-title-container">
      <div class="hexagon-hive-map-container">
        <div class="hexagon-shape">
          <div
            class="hexagon-hive-map"
            style="width: 600px; height: 600px"
            data-controller="hexagonMap"
            data-hexagonMap-markers-value="<%= @markers.to_json %>"
            data-hexagonMap-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
        </div>
      </div>
      <div class="matched-locations">
        <h4>Matched Locations</h4>
        <div class="hexagon-hive-content-cards">
          <%= render "shared/hexagon_hive_location_cards" %>
        </div>
      </div>
    </div>
  </div>

  <div class = "hexagon-hive-chatbot-container">
    <div class="container chatbot" style="width: 100%; height: 400px;">
    <h4>Hex, your AI Assistant</h4>
      <div id="questions">
        <%# <%= render "questions/question", question: @question %>
      </div>
      <%# <%= render "questions/form", question: @question %>
    </div>
  </div>
</div>
