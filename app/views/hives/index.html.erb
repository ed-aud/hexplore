<div class="hive-container">
  <div class="hive-info-container">
    <div class="hive-header-container">
      <h1>My Hive</h1>
      <%= link_to 'Grow Your Hive', root_path, class: "btn btn-primary home-button" %>
    </div>

    <div class="hive-cards-container">
      <%# <%= render "shared/hive_cards" %>
      <% @hives.each do |hive| %>
        <%= link_to hive_path(hive) do %>
          <div class="hive-card">
            <div class="hive-card-image-container">
              <%= image_tag "product_card_img.png", class: "hive-card-image" %>
            </div>
            <div class="hive-card-info">
              <div class="hive-card-info-text">
                <h2><%= hive.name %></h2>
                <p><%= hive.notes %></p>
              </div>

              <div class="hive-card-info-buttons">
                <%= link_to edit_hive_path(hive) do %>
                  <i class="fa-solid fa-pencil booking-icon"></i>
                <% end %>
                <%= link_to hive_path(hive), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
                  <i class="fa-solid fa-trash booking-icon"></i>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="hive-profile-container">
    <%= render "shared/users_card" %>
  </div>
</div>
