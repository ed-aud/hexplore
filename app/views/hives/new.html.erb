<div class="page-body">
  <div class="form-container">
    <h1>Add Hexagon</h1>

    <%= simple_form_for [@hexagon, @hive] do |f| %>
      <div class="form-inputs">
        <%= f.input :name,
                    placeholder: "Name" %>
        <%= f.input :notes,
                    placeholder: "Notes" %>

        <%= f.hidden_field :poi, value: @poi %>

      </div>
      <div class="form-actions">
        <%= f.submit "Add", class: "btn btn-primary form-button" %>
      </div>
    <% end %>
  </div>
</div>
